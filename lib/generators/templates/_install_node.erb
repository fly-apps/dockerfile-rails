<% if node_version and yarn_version -%>
# Install JavaScript dependencies
<% elsif node_version -%>
# Install Node.js
<% elsif yarn_version -%>
# Install yarn
<% end -%>
<% if node_version -%>
ARG NODE_VERSION=<%= node_version %>
<% end -%>
<% if yarn_version -%>
ARG YARN_VERSION=<%= yarn_version %>
<% end -%>
<% if node_version -%>
ENV PATH=/usr/local/node/bin:$PATH
RUN curl -sL "$(curl -s https://api.github.com/repos/nodenv/node-build/releases/latest | grep 'tarball_url' | cut -d\" -f4)" | tar xz -C /tmp/ && \
    /tmp/node-build-master/bin/node-build "${NODE_VERSION}" /usr/local/node && \
<% end -%>
<% if yarn_version -%>
<% if yarn_version < '2' -%>
<% if node_version -%>   <% else %>RUN<% end %> npm install -g yarn@$YARN_VERSION<% if node_version -%> && \<% end %>
<% else -%>
<% if node_version && (node_version.split('.').map(&:to_i) <=> [16,10,0]) < 0 -%>
    npm i -g corepack && \
<% else -%>
    corepack enable && \
<% end -%>
    corepack prepare yarn@$YARN_VERSION --activate<% if node_version -%> && \<% end %>
<% end -%>
<% end -%>
<% if node_version -%>
    rm -rf /tmp/node-build-master
<% end -%>
