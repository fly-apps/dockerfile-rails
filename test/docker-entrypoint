#!/usr/bin/env ruby
# frozen_string_literal: true

require "net/http"

LOCALHOST = `uname -n`.chomp
PORT = 3000

pid = Process.spawn("./bin/rails", "server", "-p", PORT.to_s)

begin
  60.times do |i|
    sleep 0.5
    begin
      status = Net::HTTP.get_response(LOCALHOST, "/up", PORT).code
      exit 0 if status == "200"
      exit status.to_i if %w(404 500).include? status
    rescue Errno::ECONNREFUSED, Errno::ETIMEDOUT, EOFError
    end
  end

  exit 999
ensure
  Process.kill 9, pid
end
